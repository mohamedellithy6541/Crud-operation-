@model IEnumerable<EmployeeViewModel>

@{
    ViewData["Title"] = "Employees";
    Layout = "_Layout";
}
<a asp-action="create" class="btn btn-danger mt-5"> create Employee </a>
<br /> 

<div class=" row justify-content-center align-items-center mt-5">  
<form  asp-action="Index" class="row col-8 offet-1">
    <div class="col-8">
        <input type="text" class="form-control" name="searchvalue" placeholder="search by name "/>
    </div>
    <div class="col-4">
        <input type="submit" value="Search" class="btn btn-primary"/>
    </div>
</form>    
</div>
@if (Model.Count() > 0)
{
 
        <table class="table table-bordered table-striped  table-hover mt-3 text-center">
            <tr>

                <td>@Html.DisplayNameFor(d=>d.Name)</td>
                <td>@Html.DisplayNameFor(e=>e.Age)</td>
                <td>@Html.DisplayNameFor(e=>e.Address)</td>
                <td>@Html.DisplayNameFor(d=>d.Salary)</td>
                <td>@Html.DisplayNameFor(d=>d.Email)</td>
                <td>@Html.DisplayNameFor(d=>d.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(d=>d.HireDate)</td>
                <td>@Html.DisplayNameFor(d=>d.IsActive)</td>
                <td>@Html.DisplayNameFor(d=>d.department.Name)</td>
                <td> Detailes </td>
                <td>Edite </td>
                <td>Delete</td>
            </tr>
            @foreach (var item in Model)
            {
                <tr>

                    <td> @item.Name</td>
                    <td> @item.Age </td>
                    <td> @item.Address </td>
                    <td> @item.Salary </td>
                    <td> @item.Email</td>
                    <td> @item.PhoneNumber</td>
                    <td> @item.HireDate </td>
                    <td> @item.IsActive</td>
                    <td>
                        @item.department?.Name
                    </td>
                        
                    <partial name="_buttonPartialView" model="@item.Id.ToString()" />
   
                    
                </tr>
            }

        </table> 
}
else
{
    <div class="m-3 alert-warning ">
        <h2>No Employees  less ! </h2>
    </div>
}





