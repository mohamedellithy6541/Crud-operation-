@model EmployeeViewModel
@{
    ViewData["Title"] = "Edite";
}
@inject IDepartmentRepository Repo
@{
    SelectList depts = new SelectList(Repo.GetAll(), "Id", "Name");
}
<h1>Edite</h1>
<form asp-action="Edit">

    <div>

        <label asp-for="Name" class="col-form-label"> </label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"> </span>
    </div>
    <div>

        <label asp-for="Age" class="col-form-label"> </label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"> </span>
    </div>
    <div>

        <label asp-for="Address" class="col-form-label"> </label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"> </span>
    </div>
    <div>

        <label asp-for="Salary" class="col-form-label"> </label>
        <input asp-for="Salary" class="form-control" />
        <span asp-validation-for="Salary" class="text-danger"> </span>
    </div>
    <div>

        <label asp-for="PhoneNumber" class="col-form-label"> </label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"> </span>
    </div>
    <div>

        <label asp-for="Email" class="col-form-label"> </label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"> </span>
    </div>

    <div>
        <input type="checkbox" asp-for="IsActive" class="form-check-inline" />
        <label asp-for="IsActive" class="col-form-label"> </label>
        <span asp-validation-for="IsActive" class="text-danger"> </span>
    </div>
    <div>
        <label asp-for="IsActive" class="col-form-label"> </label>
        <select class="form-control" asp-for="Departmentid" asp-items="@depts">
            <option value="@null">------select departmengts---------</option>
        </select>
        <span asp-validation-for="IsActive" class="text-danger"> </span>
    </div>
    <br/>
    <input type="submit" value="Edit" class=" btn btn-danger" /> ||
    <a class="btn btn-warning" asp-action="Index"> Back to List</a>
</form>



