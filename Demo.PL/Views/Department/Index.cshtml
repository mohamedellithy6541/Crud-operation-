@model IEnumerable<DeparmentViewModel>

@{
    ViewData["Title"] = "Departments";
    Layout = "_Layout";
}

<a asp-action="create" class="btn btn-danger"> create Department </a>
<br />  
@if (Model.Count() > 0)
{
 
        <table class="table table-bordered table-striped  table-hover mt-3 text-center">
            <tr>

                <td>@Html.DisplayNameFor(d=>d.Name)</td>
                <td>@Html.DisplayNameFor(d=>d.Code)</td>
                <td>@Html.DisplayNameFor(d=>d.DataOfCreation)</td>
                <td> Detailes </td>
                <td>Edite </td>
                <td>Delete</td>
            </tr>
            @foreach (var item in Model)
            {
                <tr>

                    <td> @item.Name</td>
                    <td> @item.Code</td>
                    <td> @item.DataOfCreation</td>
                    
                    <partial name="_buttonPartialView" model="@item.Id.ToString()" />

                </tr>
            }

        </table>
    <div>

      
    </div>

}
else
{
    <div class="m-3 alert-warning ">
        <h2>No Department here ! </h2>
    </div>
}
